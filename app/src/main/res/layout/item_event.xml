<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_event_item_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Анализируем рекламу и повышаем ее эффективность с помощью Яндекс.Метрики"/>

    <TextView
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_event_item_date"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_event_item_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textview_event_item_location"
            tools:text="8 ноября 2017"
            app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_event_item_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_event_item_date"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_event_item_date"
            tools:text="Санкт-Петербург, Россия "
            app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>